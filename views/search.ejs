<!DOCTYPE html>
<html lang="en">

<head>
  <title>Movie Recommandation</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */

    .navbar {
      margin-bottom: 50px;
      border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */

    .jumbotron {
      margin-bottom: 0;
    }

    /* Add a gray background color and some padding to the footer */

    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }
  </style>
</head>

<body>

  <div class="jumbotron">
    <div class="container text-center">
      <h1>Movies</h1>
      <p>Movie Recommandation Website</p>

      <form method="post" action="/">

        <input placeholder="Search Movie" type="text" id="txtMovie" name="searchMovie">
        <input type="submit" value="Submit">

      </form>
      <br>
      <form method="post" action="/description/">
        <input placeholder="Description Movie" type="text" id="txtDescription" name="descriptionMovie">
        <input type="submit" id="submitbtn" value="Submit">
      </form>

    </div>
  </div>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/user">
              <span class="glyphicon glyphicon-user"></span> Profile </a>
          </li>
          <li>
            <a href="/visualization">
              <span class="glyphicon glyphicon"></span> Graph</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="panel panel-primary">
          <div class="panel-heading">Movie List</div>
          <div class="panel-body">
            <table class="table table-hover">
              <tr>
                <th>Movie</td>
                  <th>Tagline</td>
                    <th>Released</td>
                      <th>Watch</th>
              </tr>
              <% moviesearch.forEach(function(search){ %>
                <tr>
                  <td onclick="clickFunction('<%= search.title %>')">
                    <%= search.title %>
                  </td>
                  <td>
                    <img src="http://neo4j-contrib.github.io/developer-resources/language-guides/assets/posters/<%= search.title %>.jpg">
                  </td>
                  <td>
                    <%= search.tagline %>
                  </td>
                  <td>
                    <%= search.released %>
                  </td>
                  <td rowspan=".3">
                    <% if (valid) { %>
                      <form method="post" action="/prefer">
                        <button value="1 <%= search.title %>" name="like">
                          <i class="fa fa-thumbs-o-up" style="font-size:20px;color:blue"></i>
                        </button>
                      </form>
                      <form method="post" action="/user">
                        <button onclick="alert('You have watched: ' + '<%= search.title %>')" value="<%= search.title %>" name="inputClickWatch">
                          <i class="fa fa-play" style="font-size:25px"></i>
                        </button>
                      </form>
                      <form method="post" action="/prefer">
                        <button value="-1<%= search.title %>" name="like">
                          <i class="fa fa-thumbs-o-down" style="font-size:20px;color:red"></i>
                        </button>
                      </form>
                      <% } %>
                  </td>
                </tr>
                <% }) %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>

  <footer class="container-fluid text-center">
    <p>MOSA</p>
  </footer>

  <script>
    function clickFunction(x) {
      document.getElementById("txtDescription").value = x;
      document.getElementById("submitbtn").click();
    }

  </script>
</body>

</html>