<!DOCTYPE html>
<html lang="en">

<head>
  <title>Movie Recommandation</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */

    .navbar {
      margin-bottom: 50px;
      border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */

    .jumbotron {
      margin-bottom: 0;
    }

    /* Add a gray background color and some padding to the footer */

    footer {
      background-color: #f2f2f2;
      padding: 25px;
    }

    h4 {
      text-align: center;
    }

    /* Set height of the grid so .sidenav can be 100% (adjust if needed) */

    .row.content {
      height: 1160px;
    }

    /* Set gray background color and 100% height */

    .sidenav {
      background-color: #f1f1f1;
      border-radius: 10px;
      overflow: hidden;
      position: fixed;
      display: block;
      text-decoration: none;

    }
  </style>
</head>

<body>
  <div class="jumbotron">
    <div class="container text-center">
      <h1>Movies</h1>
      <p>Movie Recommandation Website</p>
    </div>
  </div>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/">Home</a>
          </li>
          <li class="active">
            <a href="/test">Test</a>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/sociallogin">
              <span class="glyphicon glyphicon-user"></span> Log-in </a>
          </li>
          <li>
            <a href="/visualization">
              <span class="glyphicon glyphicon-align-left"></span> Graph </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="row content">
    <div class="col-sm-3 sidenav">
      <h4>Preference List</h4>
      <ul class="nav nav-pills nav-stacked">
        <li>
          <a href="">Home</a>
        </li>
        <li>
          <a href="">Friends</a>
        </li>
        <li>
          <a href="">Family</a>
        </li>
        <li>
          <a href="">Photos</a>
        </li>
      </ul>
    </div>
    <div class="col-lg-3" style="height: 5500px"></div>
    <div class="container-fluid">
      <div class="row">
        <% movies.forEach(function(movie1){ %>
          <div class="col-lg-3">
            <div class="panel panel-primary">
              <div class="panel-heading" align="center">
                <%= movie1.title %>
              </div>
              <form method="post" action="/chooseMovie">
                <div onclick='movieFunction("<%= movie1.title %>")'>
                  <input type="hidden" name="like" id="onOff" value="-1">
                  <div class="panel-body" align="center">
                    <input type="hidden" name="likeMovie" id="getMovie">
                    <% if (movie1.title == "Frost/Nixon") { %>
                      <img height="320" width="220" src='http://git.mobile-os.com/mos/Neo4jVisualization/raw/v0.0.002/public/images/Frost:Nixon.jpg'>
                      <% } else { %>
                        <img height="320" width="220" src='http://git.mobile-os.com/mos/Neo4jVisualization/raw/v0.0.002/public/images/<%= movie1.title %>.jpg'>
                        <% } %>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
    <script>
      function movieFunction(x) {
        currentValue = document.getElementById("onOff").value;
        document.getElementById("getMovie") = x;
        if (currentValue == "-1") {
          document.getElementById("onOff").value = 1;
        } else {
          document.getElementById("onOff").value = -1;
          alert("asd");
        }
      }
    </script>
</body>

</html>